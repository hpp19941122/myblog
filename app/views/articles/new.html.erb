<% content_for :title_h1 do %>
  <%= t('menu.new_article') %>
<% end %>

<%= form_tag('/articles/index', method: 'post', remote: true, enctype: "multipart/form-data", class: "form-horizontal") do %>
  <div class="form-group">
    <div class="col-lg-3">
        <label class="form_label"><%= t("article.title") %></label>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-3">
        <input type="text" class="form-control" name="title">
    </div>
  </div>
  <div class="form-group" style="padding-left: 15px; padding-right: 15px;">
    <%= kindeditor_tag :content %>
  </div>
<% end %>