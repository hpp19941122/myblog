<div class="content-wrap">
  <div class="content">
    <div id="slide_show" class="carousel slide slide-show" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#slide_show" data-slide-to="0" class="active"></li>
        <li data-target="#slide_show" data-slide-to="1"></li>
      </ol>

      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <a href="" target="_blank"><%= image_tag 'banner/banner_01.jpg', alt: "", class:"img-responsive" %></a>
        </div>
        <div class="item">
          <a href="" target="_blank"><%= image_tag 'banner/banner_02.jpg', alt: "", class:"img-responsive" %></a>
        </div>
      </div>

      <a class="left carousel-control" href="#slide_show" role="button" data-slide="prev" rel="nofollow">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">上一个</span>
      </a>
      <a class="right carousel-control" href="#slide_show" role="button" data-slide="next" rel="nofollow">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">下一个</span>
      </a>
    </div>

    <div class="article-list">
      <% @articles.each do |article|%>
        <article class="article">
          <header>
            <a class="cat"><%= article.label.name %><i></i></a>
            <h2><a href="<%= article_path(article['id']) %>" title=""><%= article['title'] %></a></h2>
          </header>
          <p class="meta">
            <time><i class="glyphicon glyphicon-time"></i><%= format_date(article['published_at']) %></time>
            <span class="views"><i class="glyphicon glyphicon-eye-open"></i> 共<%= article['pageview'] %>人围观</span>
            <a class="comment" href="article.html#comment">
              <i class="glyphicon glyphicon-comment"></i> 0个评论
            </a>
          </p>
          <!--<p class="note"></p>-->
        </article>
      <% end %>
    </div>
  </div>
</div>

<%= render partial: "home/shared/sidebar" %>
