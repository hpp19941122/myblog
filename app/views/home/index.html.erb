<div class="content-wrap">
  <div class="content">
    <div id="slide_show" class="carousel slide slide-show" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#slide_show" data-slide-to="0" class="active"></li>
        <li data-target="#slide_show" data-slide-to="1"></li>
        <li data-target="#slide_show" data-slide-to="2"></li>
      </ol>

      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <a href="" target="_blank"><%= image_tag 'banner/banner_01.jpg', alt: "", class:"img-responsive" %></a>
        </div>
        <div class="item">
          <a href="" target="_blank"><%= image_tag 'banner/banner_02.jpg', alt: "", class:"img-responsive" %></a>
        </div>
        <div class="item">
          <a href="" target="_blank"><%= image_tag 'banner/banner_03.jpg', alt: "", class:"img-responsive" %></a>
        </div>
      </div>

      <a class="left carousel-control" href="#slide_show" role="button" data-slide="prev" rel="nofollow">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">上一个</span>
      </a>
      <a class="right carousel-control" href="#slide_show" role="button" data-slide="next" rel="nofollow">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">下一个</span>
      </a>
    </div>

    <div class="title">
      <h3>最新发布</h3>
      <div class="tag-list">
        <% common_tags.each do |tag| %>
          <a href=""><%= tag %></a>
        <% end %>
      </div>
    </div>
    <div class="article-wrap">
      <%= render partial: "home/shared/article_list" %>
    </div>
  </div>
</div>
<%= render partial: "home/shared/sidebar" %>
<script>
  $(function(){
    var ias = $.ias({
      container: ".article-wrap",
      item: ".article",
      pagination: ".pagination",
      next: ".next-page a"
    });

    ias.extension(new IASSpinnerExtension({src: '/images/loading.gif'}));
    ias.extension(new IASTriggerExtension({}));
    ias.extension(new IASNoneLeftExtension({text: '到底了。。。'}));
  });
</script>