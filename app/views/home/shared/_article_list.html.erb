<% if @articles && @articles.size > 0 %>
  <div class="article-list">
    <% category_hash = category_hash_cache %>
    <% @articles.each do |article|%>
      <article class="article">
        <header>
          <a class="cat"><%= category_hash[article['category_id'].to_s]['name'] %><i></i></a>
          <h2><a href="<%= article_path(article['id']) %>" title=""><%= article['title'] %></a></h2>
        </header>
        <p class="meta">
          <time><i class="glyphicon glyphicon-time"></i><%= format_date(article['pubdate']) %></time>
          <span class="views"><i class="glyphicon glyphicon-eye-open"></i> 共<%= article['pv'] %>人围观</span>
          <a class="comment" href="article.html#comment">
            <i class="glyphicon glyphicon-comment"></i> 0个评论
          </a>
        </p>
        <p class="note"><%= article['summary'] %></p>
      </article>
    <% end %>
  </div>

  <div class="pagination-wrapper">
    <% if @articles.size > 0 %>
        <%= paginate @articles, remote: true, show_total_count: false %>
    <% end %>
  </div>
<% end %>
