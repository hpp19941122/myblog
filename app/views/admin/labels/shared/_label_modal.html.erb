<div class="modal fade" id="add_label_modal" tabindex="-1" role="dialog"  aria-hidden="true">
  <div class="modal-dialog" style="max-width: 400px;">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title"><%= t(".add") %></h4>
      </div>
      <div class="modal-body">
        <%= form_tag("labels", method: "post", class: "form-horizontal label_form") do %>
          <div class="form-group" style="margin-left: 15px; margin-right: 15px;">
            <%= label_tag(:name, t('.name')) %>
            <%= text_field_tag(:name, "", class: "form-control") %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-white" data-dismiss="modal"><%= t("button.cancel") %></button>
        <button type="button" class="btn btn-success label-add"><%= t("button.save") %></button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(function() {
    var $labelForm = $("#add_label_modal form");

    var validate = {
      feedbackIcons: {
        valid: 'glyphicon glyphicon-ok',
        invalid: 'glyphicon glyphicon-remove',
        validating: 'glyphicon glyphicon-refresh'
      },
      fields: {
        name: {
          validators: {
            notEmpty: {
              message: '名称不能为空'
            }
          }
        }
      }
    };

    $("#add_label_modal .label-add").on('click', function(event){
      $labelForm.bootstrapValidator(validate);
      $labelForm.data('bootstrapValidator').validate();
      if(!$labelForm.data('bootstrapValidator').isValid()){
        return false;
      }
      $labelForm[0].submit();
    });
  });
</script>
