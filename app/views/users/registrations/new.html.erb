
<div class="register-container col-lg-6">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class: 'form-horizontal'} ) do |f| %>
    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-10">
        <strong><%= t('.sign_up') %></strong>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-12">
        <%= devise_error_messages! %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label"><%= t(".email") %></label>
      <div class="col-sm-9">
        <%= f.email_field :email %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label"><%= t(".username") %></label>
      <div class="col-sm-9">
        <%= f.text_field :username %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label"><%= t(".password") %></label>
      <div class="col-sm-9">
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label"><%= t(".password_confirmation") %></label>
      <div class="col-sm-9">
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-10">
        <%= f.submit t('.sign_up') %>
      </div>
    </div>
  <% end %>
</div>
<div><%= link_to t('.sign_in_link'), new_session_path(resource_name) %></div>