<div class='sign-in-container col-lg-5'>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "needs-validation", novalidate: true}) do |f| %>
      <div class="form-title"><strong><%= t('management_system') %></strong></div>

      <div class="form-group email-group">
        <%= f.text_field :email, class: 'form-control', placeholder: t('.email_placeholder'), required: true %>
        <div class="invalid-feedback"><%= t('.email_required') %></div>
      </div>

      <div class="form-group pwd-group">
        <%= f.password_field :password, class: "form-control", placeholder: t('.pwd_placeholder'), required: true %>
        <div class="invalid-feedback"><%= t('.password_required') %></div>
      </div>

      <% if devise_mapping.rememberable? %>
          <div class="form-group remember-group">
            <div class="checkbox">
              <label><%= f.check_box :remember_me %> <%= t('.remember_pwd')%></label>
            </div>
          </div>
      <% end %>

      <% if flash[:alert].present? %>
        <div class="form-group alert-group">
          <div class="text-danger text-center"><%= flash[:alert] %></div>
        </div>
      <% end %>

      <div class="form-foot">
        <%= f.submit t('.sign_in'), class: "btn btn-primary col-lg-8" %>
      </div>
  <% end %>
</div>

<script>
    (function() {
        'use strict';
        window.addEventListener('load', function() {
            let forms = document.getElementsByClassName('needs-validation');
            Array.prototype.filter.call(forms, function(form) {
                form.addEventListener('submit', function(event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>

